<div class="col-md-12">
  <div class="post">
    <%= link_to("New post", new_post_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Create Data</td>
        <td>Update Data</td>
        <td>Category</td>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>#</td>
          <td><%= link_to(post.title, post_path(post)) %></td>
          <td><%= post.created_at.to_s(:ymd) %></td>
          <td><%= post.updated_at.to_s(:ymd)  %></td>
          <td><%= post.category.try(:name) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
