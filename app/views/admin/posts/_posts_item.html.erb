<table class="table table-boldered">
  <thead>
    <tr>
      <td>Title</td>
      <td>Content</td>
      <td>Category</td>
      <td>Update Date</td>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= link_to(render_highlight_title(post, @query_string), admin_post_path(post)) %>
        </td>

        <td>
          <%= link_to(render_highlight_content(post, @query_string), admin_post_path(post)) %>

        </td>
        <td><%= post.category.try(:name) %></td>
        <td><%= post.updated_at.to_s(:ymd)  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
