<%= simple_form_for [:admin,@post] do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-post">
    <%= f.input :title, input_html: { class: "form-control"} %>
    <%= f.input :content, input_html: { class: "form-control"}, as: :ckeditor %>
  </div>

  <%= select_tag(:category_id, options_for_select(@categories, :selected => @post.category_id), :prompt => 'Select one') %>
  <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submiting..." } %>

<% end %>
