<div class="col-md-10">
<%= render "search_bar" %>
<div class="pull-right">
  <%= link_to("Add a post", new_admin_post_path, :class => "btn btn-default" ) %>
</div>

<br><br>

<table class="table table-boldered">
  <thead>
    <tr>
      <td>#</td>
      <td>Title</td>
      <td>Create Data</td>
      <td>Update Data</td>
      <td>Category</td>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>#</td>
        <td><%= link_to(post.title, admin_post_path(post)) %></td>
        <td><%= post.created_at.to_s(:ymd) %></td>
        <td><%= post.updated_at.to_s(:ymd)  %></td>
        <td><%= post.category.try(:name) %></td>
        <td>
          <%= link_to("Edit", edit_admin_post_path(post)) %>
          <%= link_to("Destroy", admin_post_path(post), :method => :delete, :data => { :confirm => "Are you sure?" }) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div>

</div>
