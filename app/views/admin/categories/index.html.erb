<div class="col-md-10">
  <div class="pull-right">
    <%= link_to("Add a category", new_admin_category_path, :class => "btn btn-default" ) %>
  </div>
  <table class="table table-boldered">
    <thead>
      <tr>
        <td>#</td>
        <td>Name</td>
        <td>Create Data</td>
        <td>Update Data</td>
        <td>Edit</td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td>#</td>
          <td><%= category.name %></td>
          <td><%= category.created_at.to_s(:ymd) %></td>
          <td><%= category.updated_at.to_s(:ymd)  %></td>
          <td><%= link_to('edit', edit_admin_category_path(category), class: "btn btn-sm btn-default") %></td>
          <td><%= link_to('Delete', admin_category_path(category), class: "btn btn-sm btn-default", method: :delete, data: { confirm: "Are you sure?"}) %>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
